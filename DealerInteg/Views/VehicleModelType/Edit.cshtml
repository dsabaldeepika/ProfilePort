﻿@model DealerPortalCRM.ViewModels.VehicleModelTypeViewModel

@{
    ViewBag.Title = "Edit";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.VehiclModelTypeID)
        @Html.HiddenFor(model => model.VehicleModelTypeCreatedDate)
        @Html.HiddenFor(model => model.VehicleModelTypeCreatedByID)


        <div class="form-group">
            <label class="control-label col-md-2">Vehicle Make</label>
            <div class="col-md-10">
                @Html.DropDownListFor(x => x.VehicleMakeTypeID, new SelectList(Model.liVehicleMakeType, "ID", "Name"))
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Vehicle Model</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.VehicleModelTypeName)
                @Html.ValidationMessageFor(model => model.VehicleModelTypeName)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}