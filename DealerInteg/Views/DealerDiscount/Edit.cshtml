@model DealerPortalCRM.ViewModels.DealerDiscountViewModel

@{
    ViewBag.Title = "Edit";
}

<h2>Edit Dealer Discount</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.DealerDiscountID)
        @Html.HiddenFor(model => model.DealerDiscountCreatedByID)
        @Html.HiddenFor(model => model.DealerDiscountCreatedDate)

        <div class="form-group">
            <label class="control-label col-md-2">Discount</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.DealerDiscountDiscount)
                @Html.ValidationMessageFor(model => model.DealerDiscountDiscount)
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Dealer Type</label>
            <div class="col-md-10">
                @Html.DropDownListFor(x => x.DealerTypeID, new SelectList(Model.liDealerType, "ID", "Type"))
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">State Name</label>
            <div class="col-md-10">
                @Html.DropDownListFor(x => x.StateCodeID, new SelectList(Model.liStateCode, "ID", "Name"))
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
