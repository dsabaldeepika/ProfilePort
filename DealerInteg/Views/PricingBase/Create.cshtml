@model DealerPortalCRM.ViewModels.PricingBaseViewModel

@{
    ViewBag.Title = "Create Pricing Base";
}

<h2>Create Pricing Base</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            <label class="control-label col-md-2">Min Book Value</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.PricingBaseMinBV)
                @Html.ValidationMessageFor(model => model.PricingBaseMinBV)
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Max Book Value</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.PricingBaseMaxBV)
                @Html.ValidationMessageFor(model => model.PricingBaseMaxBV)
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Min LTV</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.PricingBaseMinLTV)
                @Html.ValidationMessageFor(model => model.PricingBaseMinLTV)
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Max LTV</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.PricingBaseMaxLTV)
                @Html.ValidationMessageFor(model => model.PricingBaseMaxLTV)
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Rate Discount</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.PricingBasePricingRateDiscount)
                @Html.ValidationMessageFor(model => model.PricingBasePricingRateDiscount)
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Active</label>
            <div class="col-md-10">
                @Html.CheckBox("PricingBaseIsActive", true)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
