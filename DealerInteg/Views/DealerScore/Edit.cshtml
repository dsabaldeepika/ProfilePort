@model DealerPortalCRM.ViewModels.DealerScoreViewModel

@{
    ViewBag.Title = "Edit";
}

<h2>Edit Dealer Score</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">

        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.DealerScoreID)
        @Html.HiddenFor(model => model.DealerScoreCreatedByID)
        @Html.HiddenFor(model => model.DealerScoreCreatedDate)

        <div class="form-group">
            <label class="control-label col-md-2">Score</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.DealerScoreScore)
                @Html.ValidationMessageFor(model => model.DealerScoreScore)
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Discount Adjustment</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.DealerScoreDisAjd)
                @Html.ValidationMessageFor(model => model.DealerScoreDisAjd)
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">LTV Cap</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.DealerScoreLTVCap)
                @Html.ValidationMessageFor(model => model.DealerScoreLTVCap)
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Minimum Discount</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.DealerScoreMinDisc)
                @Html.ValidationMessageFor(model => model.DealerScoreMinDisc)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
