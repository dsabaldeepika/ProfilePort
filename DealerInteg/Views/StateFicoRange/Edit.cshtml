@model DealerPortalCRM.ViewModels.StateFICORangeViewModel

@{
    ViewBag.Title = "Edit";
}

<h2>Edit Sate FICO Range</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">

        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.StateFICORangeID)
        @Html.HiddenFor(model => model.StateFICORangeCreatedByID)
        @Html.HiddenFor(model => model.StateFICORangeCreatedDate)

        <div class="form-group">
            <label class="control-label col-md-2">Minimum FICO Score</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.StateFICORangeFicoScoreMin)
                @Html.ValidationMessageFor(model => model.StateFICORangeFicoScoreMin)
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Maximum FICO Score</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.StateFICORangeFicoScoreMax)
                @Html.ValidationMessageFor(model => model.StateFICORangeFicoScoreMax)
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Minimum APR</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.StateFICORangeMinAPR)
                @Html.ValidationMessageFor(model => model.StateFICORangeMinAPR)
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">State Name</label>
            <div class="col-md-10">
                @Html.DropDownListFor(x => x.StateCodeID, new SelectList(Model.liStateCode, "ID", "Name"))
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
