@model IEnumerable<DealerPortalCRM.ViewModels.TermCapViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>Term Cap</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Min Finance Amount
        </th>
        <th>
            Max Finance Amount
        </th>
        <th>
            Adjustment Cap
        </th>
        <th>
            Modified By
        </th>
        <th>
            Modified Date
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>@Html.DisplayFor(modelItem => item.TermCapMinFinanceAmt)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TermCapMaxFinanceAmt)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TermCapAdjustmentCap)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TermCapModifiedByID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TermCapModifiedDate)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.TermCapID }) 
        </td>
    </tr>
}

</table>
